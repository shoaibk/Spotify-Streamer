<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.shoaib.spotifystreamer" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:launchMode="singleTop"
            android:name=".SearchArtistActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TopTracksActivity"
            android:label="@string/title_activity_top_tracks"
            android:parentActivityName=".SearchArtistActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.shoaib.spotifystreamer.SearchArtistActivity" />
        </activity>
    </application>

</manifest>
